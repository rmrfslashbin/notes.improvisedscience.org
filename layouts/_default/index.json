{{- $pages := slice -}}
{{- range .Site.RegularPages -}}
  {{- if and (not .Params.searchHidden) (ne .Layout `archives`) (ne .Layout `search`) }}
  {{- $pages = $pages | append (dict "title" .Title "content" .Plain "permalink" .Permalink "summary" .Summary) -}}
  {{- end }}
{{- end -}}
{{- $pages | jsonify -}}
